<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dip" >

    <!--  listrow  -->
    <LinearLayout android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="15dip">

        <ImageView
            android:id="@+id/list_row_image"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:src="@drawable/ic_phone_black_24dp"/>

    </LinearLayout>

    <!-- titulo de la categoria -->
    <TextView
        android:id="@+id/list_row_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="title"
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="18dp"
        android:layout_toRightOf="@+id/thumbnail" />
    <TextView
        android:id="@+id/list_row_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="title"
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="12dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/list_row_title"
        android:layout_toRightOf="@+id/thumbnail" />
    <TextView
        android:id="@+id/list_row_esatdo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="title"
        android:textColor="#888888"
        android:typeface="sans"
        android:textSize="12dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/list_row_description"
        android:layout_toRightOf="@+id/thumbnail" />
    <TextView
        android:id="@+id/list_row_hora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        android:textColor="#888888"
        android:typeface="sans"
        android:textSize="12dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"/>
    android:layout_alignParentTop="true"/>
    <ImageView
        android:id="@+id/list_row_sig"
        android:layout_marginTop="10dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_send_black_24dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/list_row_hora"/>

</RelativeLayout>