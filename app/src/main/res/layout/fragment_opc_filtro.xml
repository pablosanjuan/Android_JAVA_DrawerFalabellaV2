<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_black_1000_10"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ImageButton
            android:layout_marginRight="5dp"
            android:background="@color/md_black_1000_10"
            android:layout_marginTop="70dp"
            android:id="@+id/btnopcinoes"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:src="@drawable/ic_action_action_settings" />

    <TextView
        android:gravity="center"
        android:layout_below="@+id/btnopcinoes"
        android:id="@+id/text_bandeja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hoy (8)"/>

    <ListView
        android:layout_below="@+id/text_bandeja"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/listView1"/>
</RelativeLayout>